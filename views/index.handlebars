  <button id= "add" type="submit">Add Burger</button>
  <button id= "devour" type="submit">Devour Burger</button>
</form>

<div class="container">
 <ul>
  <h3>Burgers Not Devoured</h3>
  {{#each burger}}
    {{#unless devour}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
 </ul>
<ul>
  <h3>Burgers Devoured</h3>
  {{#each burger}}
    {{#if devour}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
 </ul> 
</div>

