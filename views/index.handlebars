<div class="container">
 <div class="row1">
    <ul>
     <h3>Burgers Not Devoured</h3>
     <div id="newBurger">
       {{#each burgers}}
         {{#unless devoured}}
          <div class="col-4">
           {{burger_name}}
            <button class="devour" type="reset" data-id="{{id}}" data-newDevoured="{{devoured}}">Devour it!</button>
            </div>
            <div class="col-4">
            {{newDevoured/id}} 
          </div>
     </div>
       {{/unless}}
      {{/each}}
    </ul>
   
   <ul>
     <h3>Burgers Devoured</h3>
      {{#each burgers}}
       {{#if devoured}}
        <div class="col-4">
         {{burger_name}} 
        </div>
       {{/if}}
      {{/each}}
    </ul> 
   </div>
  </div>
 </div>



